@model Models.PlayerViewModel

<hs>Add a player</hs>

<form asp-action="Add" method="post">
  <div class="form-group">
    <label asp-for="PlayerID"></label>
    <input asp-for="PlayerID" class="form-control" />
    <span asp-validation-for="PlayerID" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="LastName"></label>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Height"></label>
    <input asp-for="Height" class="form-control" />
    <span asp-validation-for="Height" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="SelectedPositions" class="control-label"></label>
    <select asp-for="SelectedPositions" asp-items="Model.PositionOptions" class="form-control"
      multiple="multiple"></select>
    <span asp-validation-for="SelectedPositions" class="text-danger"></span>
  </div>
  <p></p>
  <button type="submit" class="btn btn-primary">Add Player</button>
</form>